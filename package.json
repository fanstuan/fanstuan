{
  "name": "root",
  "private": true,
  "scripts": {
    "rollup": "rollup -c",
    "build": "node packages/cli/lib/index.ts",
    "test": "node packages/cli/bin/fantuan.js",
    "format": "prettier-standard packages/cli/bin/index.js",
    "clear": "rd /S /Q node_modules",
    "link-cli": "cd packages/cli && npm link && cd ../../"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,js,json,css}": [
      "prettier-standard --lint",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@types/chalk": "^2.2.0",
    "@types/didyoumean": "^1.2.0",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^14.0.13",
    "@types/semver": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.10",
    "prettier-standard": "^16.3.0",
    "rollup": "^2.16.1",
    "rollup-plugin-hashbang": "^2.2.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "typescript": "^3.9.5"
  }
}
